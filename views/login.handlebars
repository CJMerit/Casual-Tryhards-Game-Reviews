<div class="row">
    <div class="col-md-6">
        <h2 class="d-flex justify-content-center m-5">Login</h2>
        <div class="d-flex justify-content-center">
            <form class="form login-form border col-5 text-center p-5">
                <div class="form-group">
                    <label for="user_name">User Name:</label>
                    <input class="form-input" type="text" id="user_name" />
                </div>
                <div class="form-group">
                    <label for="password-login">Password:</label>
                    <input class="form-input" type="password" id="password-login" />
                </div>
                <div class="form-group">
                    <button class="btn btn-primary" type="submit">Login</button>
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-6">
        <h2 class="d-flex justify-content-center m-5">Sign Up</h2>
        <div class="d-flex justify-content-center">
        <form class="form signup-form border col-5 text-center p-5">
            <div class="form-group">
                <label for="name-signup">User name:</label>
                <input class="form-input" type="text" id="name-signup" />
            </div>
            <div class="form-group">
                <label for="email-signup">Email:</label>
                <input class="form-input" type="text" id="email-signup" />
            </div>
            <div class="form-group">
                <label for="password-signup">Password:</label>
                <input class="form-input" type="password" id="password-signup" />
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">Signup</button>
            </div>
        </form>
        </div>
    </div>
</div>

<script src="/js/login.js"></script>