{{#each games as |game| }}
<div class="row">
  <a class="col" href="/games/{{game.id}}">{{game.name}}</a>
  <img class="col" src={{game.cover}}>
  <p class="col">
    {{game.game_description}}
  </p>
</div>
{{/each}}
<!--Carousel for home page-->
<div
  id="carouselExampleIndicators"
  class="carousel slide container-sm"
  data-ride="carousel"
>

  <div class="carousel-inner">
    <div class="carousel-item active">
      <img
        src="{{displayData.0.image}}"
        class="d-block w-100 carousel-img"
        alt="..."
      />
    </div>
    <div class="carousel-item">
      <img
        src="{{displayData.1.image}}"
        class="d-block w-100 carousel-img"
        alt="..."
      />
    </div>
    <div class="carousel-item">
      <img
        src="{{displayData.2.image}}"
        class="d-block w-100 carousel-img"
        alt="..."
      />
    </div>
    <div class="carousel-item">
      <img
        src="{{displayData.3.image}}"
        class="d-block w-100 carousel-img"
        alt="..."
      />
    </div>
    <div class="carousel-item">
      <img
        src="{{displayData.4.image}}"
        class="d-block w-100 carousel-img"
        alt="..."
      />
    </div>
  </div>
  <button
    class="carousel-control-prev"
    type="button"
    data-target="#carouselExampleIndicators"
    data-slide="prev"
  >
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </button>
  <button
    class="carousel-control-next"
    type="button"
    data-target="#carouselExampleIndicators"
    data-slide="next"
  >
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </button>
  <!--Sign in Advertisement-->
  <div class="advertise container mx-auto px-auto">
    <p class="lead">Sign up to write your own review!</p>
    <h1 class="display-4"><a href="/login" class="text-dark">Sign Up</a></h1>
  </div>
</div>